    <ImageView
        android:id="@+id/imageView"
        android:layout_width="215dp"
        android:layout_height="297dp"
        android:layout_marginStart="32dp"

        android:layout_marginTop="125dp"
        android:src="@drawable/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/port_switch"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        android:checked="false"
        android:thumb="@drawable/switch_thumb_selector"
        android:track="@drawable/switch_track_selector"
        app:layout_constraintEnd_toStartOf="@+id/switch_nvr"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/switch_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="30dp"
        android:text="@string/cam_side"
        android:textColor="@color/WhiteSmoke"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/port_switch"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/switch_nvr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="30dp"
        android:text="@string/nvr_side"
        android:textColor="@color/WhiteSmoke"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
